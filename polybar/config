[colors]
fg = #bbc2cf

bg = #1d2026
bg-alt = #282c34

red = #e36d76
green = #98be65
yellow = #ecbe7b
magenta = #c678dd
violet = #c3ace7
blue = #51afef

[bar/main]
width = 100%
height = 24
offset-y = 0
top = true
fixed-center = true

wm-restack = i3
tray = right

override-redirect = false

scroll-up = next
scroll-down = prev

enable-ipc = true

background = ${colors.bg}
foreground = ${colors.fg}

font-0 = "Iosevka Nerd Font:style=Bold:size=11;2"
font-1 = "Iosevka Nerd Font:style=Medium:size=11;2"
font-2 = "unifont:fontformat=truetype:size=11;2"
font-3 = "Iosevka Nerd Font:style=Bold:size=15;2"

modules-left = i3 title
modules-center = date
modules-right = cpu memory battery audio brightness wifi ethernet

cursor-click = pointer

[bar/external]
monitor = HDMI-1
inherit = bar/main

modules-left = i3 title
modules-center = date
modules-right = cpu memory battery audio brightness wifi ethernet

[settings]
screenchange-reload = true

[module/title]
type = internal/xwindow
format = <label>
format-foreground = ${colors.magenta}
label = %title%
label-maxlen = 30
format-padding = 1

[module/i3]
type = internal/i3

ws-icon-0 = 1;ﴬ
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;ﭮ

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = ${colors.yellow}


label-focused = %icon%
label-focused-foreground = ${colors.green}
label-focused-padding = 1

label-unfocused = %icon%
label-unfocused-padding = 1

label-visible = %icon%
label-visible-foreground = ${colors.blue}
label-visible-padding = 1

label-urgent = %icon%
label-urgent-foreground = ${colors.red}
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 5

time = "%a, %b %d - %H:%M"

format = <label>
format-foreground = ${colors.fg}
format-padding = 1
format-prefix = 
format-prefix-foreground = ${colors.yellow}
label =  %{T1}%time%%{T-}
label-padding = 1

[module/memory]
type = internal/memory
interval = 2

format-prefix = "  "
format = <label>
label = %percentage_used:1%%
format-prefix-foreground = ${colors.violet}
format-padding = 1

[module/audio]
type = internal/pulseaudio


format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
format-muted =ﱝ <label-muted>
label-muted = %percentage%%

format-muted-foreground = ${colors.red}
ramp-volume-0 ="奄 "
ramp-volume-1 ="奔 "
ramp-volume-2 ="墳 "
ramp-volume-0-foreground = ${colors.blue}
ramp-volume-1-foreground = ${colors.blue}
ramp-volume-2-foreground = ${colors.blue}


bar-volume-width = 10
bar-muted-foreground-0 = ${colors.red}
bar-volume-gradient = false

format-volume-padding = 1
format-muted-padding = 1

click-right = pavucontrol&

[module/wifi]
type = internal/network
interface = wlp5s0
interval = 1.0

format-connected = <ramp-signal><label-connected>
